<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_color"
    android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/corner_radius" />
            <stroke
                android:width="@dimen/_dimen_1"
                android:color="@color/stroke_color" />
            <padding
                android:bottom="@dimen/_dimen_5"
                android:left="@dimen/_dimen_10"
                android:right="@dimen/_dimen_10"
                android:top="@dimen/_dimen_10" />
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <inset
            android:insetLeft="@dimen/_dimen_3"
            android:insetTop="@dimen/_dimen_3"
            android:insetRight="@dimen/_dimen_3"
            android:insetBottom="@dimen/_dimen_3">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
                <corners android:radius="@dimen/corner_radius" />
            </shape>
        </inset>
    </item>

</ripple>