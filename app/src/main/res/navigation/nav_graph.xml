<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userEntriesFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="lostankit7.droid.moodtracker.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />
    <fragment
        android:id="@+id/userEntriesFragment"
        android:name="lostankit7.droid.moodtracker.ui.main.userEntries.UserEntriesFragment"
        android:label="fragment_entries"
        tools:layout="@layout/fragment_user_entries" />
    <fragment
        android:id="@+id/calendarFragment"
        android:name="lostankit7.droid.moodtracker.ui.main.calendar.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/moreFragment"
        android:name="lostankit7.droid.moodtracker.ui.main.more.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more" />
    <fragment
        android:id="@+id/addMoodEntryFragment"
        android:name="lostankit7.droid.moodtracker.ui.main.newentry.mood.MoodEntryFragment"
        android:label="fragment_add_mood_entry"
        tools:layout="@layout/fragment_mood_entry">
        <action
            android:id="@+id/action_addMoodEntryFragment_to_addTaskEntryFragment"
            app:destination="@id/addTaskEntryFragment" />
        <action
            android:id="@+id/action_addMoodEntryFragment_to_editMoodFragment"
            app:destination="@id/editMoodFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTaskEntryFragment"
        android:name="lostankit7.droid.moodtracker.ui.main.newentry.task.TaskEntryFragment"
        android:label="fragment_add_task_entry"
        tools:layout="@layout/fragment_task_entry">
        <argument
            android:name="@string/arg_to_addNewTaskFrag"
            app:argType="lostankit7.droid.moodtracker.model.MoodEntry"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_addTaskEntryFragment_to_entriesFragment"
            app:destination="@id/userEntriesFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/editMoodFragment"
        android:name="lostankit7.droid.moodtracker.ui.main.customizeIcon.mood.EditMoodFragment"
        android:label="fragment_edit_mood"
        tools:layout="@layout/fragment_edit_mood" />
</navigation>