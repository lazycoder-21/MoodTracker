<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="editButtonStyle">
        <item name="android:layout_width">@dimen/lg_rounded_icon_bg_size</item>
        <item name="android:layout_height">@dimen/lg_rounded_icon_bg_size</item>
        <item name="android:text">@string/fas_edit</item>
        <item name="android:textColor">@color/sec_icon_color</item>
        <item name="android:textSize">@dimen/edit_btn_size</item>
        <item name="background_circular">true</item>
        <item name="fa_solid">true</item>
        <item name="ripple_color">@color/ripple_color</item>
        <item name="stroke_color">@color/stroke_color</item>
        <item name="stroke_width">@dimen/dp_2</item>
    </style>

    <style name="roundedIcon">
        <item name="android:layout_width">@dimen/sml_rounded_icon_bg_size</item>
        <item name="android:layout_height">@dimen/sml_rounded_icon_bg_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sec_icon_color</item>
        <item name="background_circular">true</item>
        <item name="fa_solid">true</item>
        <item name="ripple_color">@color/ripple_color</item>
        <item name="stroke_color">@color/stroke_color</item>
        <item name="stroke_width">1dp</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/header_text_color</item>
    </style>

    <style name="moodIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fa_regular">true</item>
        <item name="android:textColor">@color/mood_icon_color</item>
        <item name="android:textSize">@dimen/large_icon_size</item>
    </style>

    <style name="defEdtStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/std_height</item>
        <item name="android:background">@drawable/bg_rounded_white_stroke_gray</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textColorHighlight">@color/hint_color</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="defButtonStyle">
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:layout_height">@dimen/def_button_height</item>
        <item name="stroke_color">@color/stroke_color</item>
        <item name="corner_radius">@dimen/corner_radius</item>
        <item name="ripple_color">@color/ripple_color</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>