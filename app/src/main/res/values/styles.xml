<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editMoodRoundedIcon">
        <item name="android:layout_width">@dimen/sml_rounded_icon_bg_size</item>
        <item name="android:layout_height">@dimen/sml_rounded_icon_bg_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sec_icon_color</item>
        <item name="background_circular">true</item>
        <item name="fa_solid">true</item>
        <item name="ripple_color">@color/ripple_color</item>
        <item name="stroke_color">@color/hint_color</item>
        <item name="stroke_width">1dp</item>
    </style>

    <style name="dropDownStyle">
        <item name="android:layout_width">@dimen/lg_rounded_icon_bg_size</item>
        <item name="android:layout_height">@dimen/lg_rounded_icon_bg_size</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/fas_drop_down</item>
        <item name="android:textSize">@dimen/rounded_icon_size</item>
        <item name="background_circular">true</item>
        <item name="fa_solid">true</item>
        <item name="ripple_color">@color/ripple_color</item>
        <item name="stroke_color">@color/hint_color</item>
        <item name="stroke_width">1dp</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/header_text_color</item>
    </style>

    <style name="moodIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fa_regular">true</item>
        <item name="android:textColor">@color/mood_icon_color</item>
        <item name="android:textSize">@dimen/mood_icon_size</item>
    </style>

    <style name="defEdtStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/std_height</item>
        <item name="android:background">@drawable/bg_rounded_white_stroke</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textColorHighlight">@color/hint_color</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
</resources>