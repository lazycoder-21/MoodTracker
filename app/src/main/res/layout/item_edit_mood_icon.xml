<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_rounded_white_stroke_gray"
    android:elevation="1dp"
    android:padding="10dp">

    <lostankit7.droid.CustomTextView
        android:id="@+id/moodIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fas_save"
        android:textColor="@color/sec_icon_color"
        android:textSize="@dimen/normal_icon_size"
        app:fa_regular="true" />

    <lostankit7.droid.CustomTextView
        android:id="@+id/tvMoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"
        android:layout_toStartOf="@id/dropDownIcon"
        android:layout_toEndOf="@id/moodIcon"
        android:textAlignment="textStart"
        android:textColor="@color/sec_icon_color" />

    <lostankit7.droid.CustomTextView
        android:id="@+id/dropDownIcon"
        style="@style/icon_rounded_bg"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/sml_rounded_icon_bg_size"
        android:layout_height="@dimen/sml_rounded_icon_bg_size"
        android:layout_alignParentEnd="true"
        android:text="@string/fas_drop_down"
        android:textColor="@color/sec_icon_color" />

</RelativeLayout>