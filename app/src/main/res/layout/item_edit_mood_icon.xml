<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <lostankit7.droid.CustomTextView
        android:id="@+id/moodIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fas_save"
        android:textColor="@color/sec_mood_icon_color"
        android:textSize="@dimen/normal_icon_size"
        app:fa_regular="true" />

    <lostankit7.droid.CustomTextView
        android:id="@+id/tvMoodName"
        android:layout_width="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/sec_mood_text_color" />

    <lostankit7.droid.CustomTextView
        android:id="@+id/dropDownIcon"
        style="@style/dropDownIcon"
        android:text="@string/fas_drop_down"
        android:textColor="@color/mood_icon_color" />

</LinearLayout>