<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/std_height"
    android:paddingHorizontal="15dp">

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_rounded_ripple"
        android:gravity="center"
        android:padding="5dp">

        <lostankit7.droid.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fas_back"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/icon_size_sml_action_bar"
            app:fa_solid="true" />

        <lostankit7.droid.CustomTextView
            android:id="@+id/tvLeftSubIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/icon_size_action_bar"
            app:fa_regular="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_rounded_ripple"
        android:gravity="center"
        android:padding="5dp">

        <lostankit7.droid.CustomTextView
            android:id="@+id/btnRightIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fas_save"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/icon_size_action_bar"
            app:fa_solid="true" />

        <lostankit7.droid.CustomTextView
            android:id="@+id/tvRightIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/text_save"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>
</RelativeLayout>