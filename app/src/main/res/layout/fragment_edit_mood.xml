<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.customizeIcon.mood.EditMoodFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/addNewMood"
        app:layout_constraintTop_toTopOf="parent" />

    <lostankit7.droid.CustomButton
        android:id="@+id/addNewMood"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_button_height"
        android:layout_margin="10dp"
        android:background="@drawable/bg_rounded_white_stroke_gray"
        android:text="@string/text_add_new_mood"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>