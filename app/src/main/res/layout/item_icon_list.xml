<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/std_height"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_white_stroke_n_ripple">

    <lostankit7.droid.CustomTextView
        android:id="@+id/moodIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fas_save"
        android:textColor="@color/sec_icon_color"
        android:textSize="@dimen/small_icon_size"
        app:fa_regular="true" />

    <lostankit7.droid.CustomTextView
        android:id="@+id/tvMoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"
        android:layout_toStartOf="@id/tvEditMood"
        android:layout_toEndOf="@id/moodIcon"
        android:textAlignment="textStart"
        android:textColor="@color/sec_icon_color" />

    <lostankit7.droid.CustomTextView
        android:id="@+id/tvEditMood"
        style="@style/editMoodRoundedIcon"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/tvDeleteMood"
        android:text="@string/fas_edit" />

    <lostankit7.droid.CustomTextView
        android:id="@+id/tvDeleteMood"
        style="@style/editMoodRoundedIcon"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/fas_delete" />
</RelativeLayout>
